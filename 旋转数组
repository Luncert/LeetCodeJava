class Solution {
  public void rotate(int[] nums, int k) {
    if (k > nums.length) {
      k %= nums.length;
    }
    if (k == 0 || k == nums.length) {
      return;
    }
    int step = k;
    do {
      for (int i = 0, j; i < k; i++) {
        j = (i + step) % nums.length;
        int tmp = nums[j];
        nums[j] = nums[i];
        nums[i] = tmp;
      }
      step += k;
    } while (step < nums.length);
  }
}
